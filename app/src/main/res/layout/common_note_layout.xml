<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"

        >

        <ImageView
            android:id="@+id/common_note_image1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"
            />

        <TextView
            android:id="@+id/common_note_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_above="@+id/common_note_text2"
            android:layout_toEndOf="@+id/common_note_image1"
            android:paddingLeft="8dp"
            android:layout_marginTop="4dp"

            android:text="aaaaaaaaaaa"
            android:textAlignment="viewStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/common_note_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/common_note_image1"
            android:layout_toEndOf="@+id/common_note_image1"
            android:paddingTop="8dp"
            android:paddingLeft="8dp"

            style="@style/FontStyle1"
            android:text="bbbbbbbb"
            android:textAlignment="viewStart"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/common_note_image2"
            android:layout_width="18dp"
            android:layout_height="18dp"

            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/common_note_text2"
            />

        <TextView
            android:id="@+id/common_note_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@id/common_note_image2"
            android:layout_alignStart="@+id/common_note_text2"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:paddingLeft="8dp"

            android:text="ccccccc"
            android:textAlignment="viewStart"
            android:textSize="12sp" />

    </RelativeLayout>
</LinearLayout>
